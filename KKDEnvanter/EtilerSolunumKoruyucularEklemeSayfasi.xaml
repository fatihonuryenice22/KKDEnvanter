                <ImageBrush ImageSource="/IMG_3126.JPG" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush Color="#CC0000"/>
                <!-- Koyu Kırmızı -->
            </Button.Foreground>

        </Button>
        <Button Content="Aktif Karbon Maskesi" HorizontalAlignment="Left" Height="69" Margin="158,200,0,0" VerticalAlignment="Top" Width="129" FontWeight="Bold" Click="Button_Click_2">
            <Button.Background>
                <ImageBrush ImageSource="/IMG_3125.JPG" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush Color="#CC0000"/>
                <!-- Koyu Kırmızı -->
            </Button.Foreground>

        </Button>
        <Button Content="Gaz Filtresi" HorizontalAlignment="Left" Height="69" Margin="450,200,0,0" VerticalAlignment="Top" Width="129" FontWeight="Bold" Click="Button_Click_4">
            <Button.Background>
                <ImageBrush ImageSource="/IMG_3127.JPG" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.Foreground>
                <SolidColorBrush Color="#CC0000"/>
                <!-- Koyu Kırmızı -->
            </Button.Foreground>

        </Button>


    </Grid>
</Window>
